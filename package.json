{
  "name": "@skyscanner/stylelint-plugin-backpack",
  "version": "2.0.1",
  "description": "Stylelint configuration for Backpack development",
  "keywords": [
    "stylelint",
    "stylelintplugin",
    "stylelint-plugin",
    "scss",
    "skyscanner"
  ],
  "author": "Backpack Design System <backpack@skyscanner.net>",
  "main": "index.js",
  "engines": {
    "node": ">=16.13.0",
    "npm": ">=8.1.0"
  },
  "scripts": {
    "pretest": "npx ensure-node-env@2.0.0 ",
    "test": "npm run lint && jest --testPathPattern=\"^((?!use-colors/)(?!use-tokens/).)*$\"",
    "lint": "npm run lint:js",
    "lint:js": "eslint . --ext js",
    "lint:js:fix": "eslint . --ext js --fix",
    "prettier": "prettier --config .prettierrc --write \"**/*.{js,jsx}\"",
    "prepare": "husky install"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@skyscanner/bpk-foundations-web": "^6.2.0",
    "lodash": "^4.17.21",
    "postcss-values-parser": "^6.0.0",
    "tinycolor2": "^1.4.2"
  },
  "devDependencies": {
    "@skyscanner/eslint-config-skyscanner": "^15.1.0",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "lint-staged": "^11.1.2",
    "stylelint": "^15.10.2"
  },
  "peerDependencies": {
    "stylelint": "^15.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com/Skyscanner/stylelint-plugin-backpack.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "!(LICENSE)*.md": [
      "prettier --write"
    ],
    "**/!(package|package-lock).json": "prettier --write",
    "**/*.js": "npm run lint:js:fix",
    "**/*.yml": "prettier --write"
  }
}
