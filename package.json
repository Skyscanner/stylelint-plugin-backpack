{
  "name": "@skyscanner/stylelint-plugin-backpack",
  "version": "1.1.2",
  "description": "Stylelint configuration for Backpack development",
  "keywords": [
    "stylelint",
    "stylelintplugin",
    "stylelint-plugin",
    "scss",
    "skyscanner"
  ],
  "author": "Backpack Design System <backpack@skyscanner.net>",
  "main": "index.js",
  "engines": {
    "node": "^12.13.0",
    "npm": "^6.12.0"
  },
  "scripts": {
    "pretest": "npx ensure-node-env",
    "test": "npm run lint && jest",
    "lint": "npm run lint:js",
    "lint:js": "eslint . --ext js",
    "lint:js:fix": "eslint . --ext js --fix",
    "prettier": "prettier --config .prettierrc --write \"**/*.{js,jsx}\""
  },
  "license": "Apache-2.0",
  "dependencies": {
    "bpk-tokens": "^32.0.5",
    "lodash": "^4.17.19",
    "postcss-values-parser": "^3.2.1",
    "stylelint": "^13.6.1",
    "tinycolor2": "^1.4.1"
  },
  "devDependencies": {
    "eslint-config-skyscanner": "^6.0.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.11"
  },
  "peerDependencies": {
    "stylelint": "^13.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com/Skyscanner/stylelint-plugin-backpack.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "!(LICENSE)*.md": [
      "prettier --write"
    ],
    "**/!(package|package-lock).json": "prettier --write",
    "**/*.js": "npm run lint:js:fix",
    "**/*.yml": "prettier --write"
  }
}
