{
  "name": "@skyscanner/stylelint-plugin-backpack",
  "version": "2.0.1",
  "description": "Stylelint configuration for Backpack development",
  "keywords": [
    "stylelint",
    "stylelintplugin",
    "stylelint-plugin",
    "scss",
    "skyscanner"
  ],
  "author": "Backpack Design System <backpack@skyscanner.net>",
  "main": "index.js",
  "engines": {
    "node": ">=18.12.0",
    "npm": ">=9.5.1"
  },
  "type": "module",
  "scripts": {
    "pretest": "npx ensure-node-env@2.0.0 ",
    "test": "npm run lint && NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=\"^((?!use-colors/)(?!use-tokens/).)*$\"",
    "lint": "npm run lint:js",
    "lint:js": "eslint . --ext js",
    "lint:js:fix": "eslint . --ext js --fix",
    "prettier": "prettier --config .prettierrc --write \"**/*.{js,jsx}\"",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@skyscanner/bpk-foundations-web": "^19.3.0",
    "lodash": "^4.17.21",
    "postcss-values-parser": "^6.0.2",
    "tinycolor2": "^1.6.0"
  },
  "devDependencies": {
    "@skyscanner/eslint-config-skyscanner": "^20.0.0",
    "husky": "^9.1.5",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.0",
    "stylelint": "^16.6.1"
  },
  "peerDependencies": {
    "stylelint": "^16.6.1"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com/Skyscanner/stylelint-plugin-backpack.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "!(LICENSE)*.md": [
      "prettier --write"
    ],
    "**/!(package|package-lock).json": "prettier --write",
    "**/*.js": "npm run lint:js:fix",
    "**/*.yml": "prettier --write"
  }
}
